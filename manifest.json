{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zammad-tab-redirector@yog.wtf"
    }
  },
  "icons": {
    "16": "icons/icon.ico",
    "32": "icons/icon.ico",
    "48": "icons/icon.ico",
    "128": "icons/icon.ico"
  }
} 